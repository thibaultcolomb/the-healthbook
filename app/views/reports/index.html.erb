<div class="main">

  <div class="d-flex align-items-center mt-5">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left ms-3"></i>
    <% end %>
    <div class="mx-auto text-center">
      <h2>Medical history</h2>
    </div>
  </div>

  <div class="searchbar">
    <%= form_with url: reports_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control bg-info p-0 ps-1",
            placeholder: "Search for a report"
        %>
      <%= text_field_tag :report_date,
          params[:report_date],
          data: { controller: "datepicker" }, placeholder: "Date..", class: "form-control bg-info p-0 ps-1 ms-1" %>

      <%= submit_tag "Search", name: "", class: "btn bg-primary m-0 p-0 ms-1 p-1", style: "color: #176B87;" %>
    <% end %>
  </div>


  <ul class="inline-list">
    <%= link_to reports_path, class:"text-decoration-none" do %>
      <div class="all-button bg-primary", style= "color: #176B87;">
        <%# <i class="fa-solid fa-file"></i> %>
        <p style="">All</p>
      </div>
    <% end %>
    <% @categories.each do |category|%>
      <li>
        <%= link_to reports_path(category: category), class: "text-decoration-none" do %>
        <div  class="all-button">
          <%= render "icon_cat", category: category%>
        </div>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%# <div class="d-flex justify-content-end">
    <%= link_to new_report_path do %>
      <%# <i class="fa-solid fa-plus fa-2x"></i> %>
    <%# <% end %>
  <%# </div> %>

  <div class="d-flex justify-content-end">
    <div class="dropdown">
      <!-- Button trigger dropdown -->
      <i class="fa-solid fa-plus fa-2x text-primary" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"></i>
      <!-- Dropdown menu -->
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li><%= link_to "Upload image", new_report_path, class: "dropdown-item" %></li>
        <li><hr class="dropdown-divider"></li>
        <li><%= link_to "Upload pdf", new_report_path, class: "dropdown-item" %></li>
        <li><hr class="dropdown-divider"></li>
        <li><%= link_to "Fill manually", new_report_path, class: "dropdown-item" %></li>
      </ul>
    </div>
  </div>

  <ul class="reports">
    <% @reports.each do |report|%>
      <%= render "report_card", report: report %>
    <% end %>

  </ul>

</div>
