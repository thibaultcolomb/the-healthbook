
<div>
  <%= link_to root_path do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h3>Medical history</h3>
</div>


<%= form_with url: reports_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Type a keyword"
    %>
  <%= submit_tag "Search", name: "", class: "" %>
<% end %>

<ul>
  <%= link_to "All", reports_path %>
  <% @categories.each do |category|%>
  <li>
    <%= link_to category, reports_path(category: category) %>
  </li>
  <% end %>
</ul>

<%= link_to new_report_path do %>
  <p>New </p>
  <i class="fa-solid fa-plus"></i>
<% end %>

<ul>
  <% @reports.each do |report|%>
    <li>
      <%= report.report_date %>
      <%= report.title %>
      <%= report.category %>
      <%= report.content %>
    </li>
  <% end %>

</ul>
