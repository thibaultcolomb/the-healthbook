<div class="main">

  <div class="d-flex align-items-center mt-5">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left ms-3"></i>
    <% end %>
    <div class="mx-auto text-center">
      <h3>Medical history</h3>
    </div>
  </div>

  <div class="searchbar">
    <%= form_with url: reports_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>


  <ul class="inline-list">
    <%= link_to "All", reports_path %>
    <% @categories.each do |category|%>
    <li>
      <%= link_to category, reports_path(category: category) %>
    </li>
    <% end %>
  </ul>

  <div class="d-flex justify-content-end">
    <%= link_to new_report_path do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>


  <ul class="reports">
    <% @reports.each do |report|%>
      <%= render "report_card", report: report %>
    <% end %>

  </ul>

</div>
