<div class='main'>
  <div class="d-flex align-items-center mt-5">
    <%= link_to doctors_path do %>
      <i class="fa-solid fa-arrow-left ms-3 back-arrow"></i>
    <% end %>
    <div class="mx-auto text-center">
      <h2>New Doctor</h2>
    </div>
  </div>

  <%= simple_form_for @doctor, html: { autocomplete: 'off' } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :first_name, input_html: { class: "bg-white" } %>
    <%= f.input :last_name, input_html: { class: "bg-white" } %>
    <%= f.input :email, input_html: { class: "bg-white" } %>
    <%= f.input :specialty, collection: ["Internal Medicine", "Surgery", "Pediatrics" ,"Obstetrics and Gynecology", "Psychiatry", "Radiology", "Anesthesiology", "Emergency Medicine","Pathology", "Ophthalmology", "Otolaryngology (ENT)" , "Dermatology", "Neurology", "Urology", "Orthopedics" , "Physical Medicine and Rehabilitation", "Allergy and Immunology", "Infectious Diseases", "Endocrinology", "Cardiology"], input_html: { class: "bg-white" } %>
    <%= f.submit "Create Doctor", class: "btn btn-primary form-submit-btn" %>
  <% end %>
</div>
