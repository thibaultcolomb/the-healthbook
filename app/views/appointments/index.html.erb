<div class="sticky-head">
  <div class="d-flex align-items-center mt-1">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left ms-3 back-arrow" ></i>
    <% end %>
    <div class="mx-auto text-center">
      <h2 style="color: #176B87;">Appointments</h2>
    </div>
    <div class="add-button-div">
      <%= link_to new_appointment_path do %>
        <i class="fa-solid fa-plus  text-primary mb-1 btn bg-primary text-white"></i>
      <% end %>
  </div>
  </div>


</div>

<div class="main">


<ul class="appointments">
  <h5>Upcoming</h5>
  <% @appointments.sort_by(&:appointment_date).each do |appointment| %>
    <% if appointment.appointment_date > Date.today %>
      <%= render "appointment_swiper", appointment: appointment %>
    <% end %>
  <% end %>

  <h5>Past</h5>
  <% @appointments.sort_by(&:appointment_date).reverse_each do |appointment| %>
    <% if appointment.appointment_date <= Date.today %>

      <%= render "appointment_swiper", appointment: appointment %>
    <% end %>
  <% end %>
</ul>

</div>
