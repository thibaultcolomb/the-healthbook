<div class="sticky-head">
  <div class="d-flex align-items-center mt-5">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left ms-3 back-arrow" ></i>
    <% end %>
    <div class="mx-auto text-center">
      <h2 style="color: #176B87;">Your appointments</h2>
    </div>
  </div>

  <div class="add-button-div">
    <%= link_to new_appointment_path do %>
      <i class="fa-solid fa-plus  text-primary mb-3 btn bg-primary text-white"></i>
    <% end %>
  </div>
</div>

<div class="main">
  <ul class="appointments">
    <% @appointments.each do |appointment|%>
      <%= render "appointment_card", appointment: appointment %>
    <% end %>
  </ul>
</div>
